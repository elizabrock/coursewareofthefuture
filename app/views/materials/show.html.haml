.material
  .breadcrumbs
    %small= pretty_path_for(material)

  %ul.button-group.right
    - if can?(:manage, CoveredMaterial)
      %li= link_to "Edit on Github", edit_material_url(material), class: "button secondary fi-page-edit"
    %li= link_to "View As Slides", course_material_slides_path(current_course, material), class: "button secondary fi-monitor"

  = render covered_material, locals: { material: material }

  - if read_materials_fullpaths.include?(material.fullpath)
    .label.radius.fi-check.read-status Read
  - else
    = link_to "Mark as Read", read_materials_path(course_id: current_course.id, read_material: { material_fullpath: material.fullpath }), class: "label alert fi-asterisk", method: :post

  .content
    :markdown
      #{ material.content }

  %hr
  %h2 Discussion:
  %em Coming Soon!
